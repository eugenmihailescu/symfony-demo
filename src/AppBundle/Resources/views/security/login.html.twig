{% extends 'AppBundle::base.html.twig' %} 
{% block body %}
{% if error %}
	<div class="alert alert-dismissible alert-danger">
	  <button type="button" class="close" data-dismiss="alert">&times;</button>
	  {{ error.messageKey|trans(error.messageData, 'security') }}
	</div>
{% endif %}

<div class="container body-container">
	<div class="row">
		<div class="col-sm-9">
			<div class="row">
				<div class="col-sm-5">
					<form id="login_form" action="{{ path('security_login_check') }}"
						method="post" class="well">
						<fieldset>
							<legend>
								<i class="fa fa-lock"></i> {{ 'title.login'|trans }}
							</legend>

							<div class="form-group">
								<label class="control-label" for="username">{{
									'login_username'|trans }}</label> <input class="form-control"
									id="username" name="_username" value="{{ last_username }}"
									required="required" type="text">
							</div>

							<div class="form-group">
								<label class="control-label" for="password">{{
									'login_password'|trans }}</label> <input class="form-control"
									id="password" name="_password" required="required" type="password" maxlength="4096">
							</div>

							<div class="form-group">
								{# If you want to control the URL the user is redirected to on
								success (more details below) <input type="hidden"
								name="_target_path" value="/account" /> #}
								<button type="submit" class="btn btn-primary"
									style="margin-right: 10px">
									<i class="fa fa-sign-in"></i> {{ 'Login'|trans }}
								</button>
							</div>
							<div class="form-group">
								<input type="checkbox" id="remember_me" name="_remember_me"
									checked /> <label for="remember_me">{{
									'keep_me_logged_in'|trans }}</label> <input type="hidden"
									name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
							</div>
						</fieldset>
					</form>
				</div>
				<div id="login-help" class="col-sm-7">
					<h3>
						<i class="fa fa-long-arrow-left"></i> {{ 'help.login_users'|trans
						}}
					</h3>

					<table class="table table-striped table-bordered table-hover">
						<thead>
							<tr>
								<th style="white-space: nowrap;">{{ 'login_username'|trans }}</th>
								<th>{{ 'login_password'|trans }}</th>
								<th>{{ 'label.role'|trans }}</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td>eugen</td>
								<td>eugen</td>
								<td><code>ROLE_USER</code> ({{ 'help.role_user'|trans }})</td>
							</tr>
							<tr>
								<td>admin</td>
								<td>admin</td>
								<td><code>ROLE_ADMIN</code> ({{ 'help.role_admin'|trans }})</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>

		{% set symfony_doc_url="http://symfony.com/doc/current/book/" %}
		<div id="sidebar" class="col-sm-3">
			<div class="section about">
				<div class="well well-lg">
					<p>{{ 'help.app_description'|trans|raw }}:</p>
					<ul>
						<li><a href="{{ symfony_doc_url }}security.html">Security</a></li>
						<li><a href="{{ symfony_doc_url }}controller.html">Controller</a></li>
						<li><a href="{{ symfony_doc_url }}routing.html"> Routing </a></li>
						<li><a href="{{ symfony_doc_url }}templating.html"> Templating </a></li>
						<li><a href="{{ symfony_doc_url }}doctrine.html"> Doctrine </a></li>
						<li><a href="{{ symfony_doc_url }}forms.html"> Forms </a></li>
						<li><a href="{{ symfony_doc_url }}validation.html"> Validation </a></li>
						<li><a href="{{ symfony_doc_url }}translation.html"> Translation </a>
						</li>
						<li><a href="{{ symfony_doc_url }}service_container.html">
								Services </a></li>
					</ul>
					<p>{{ 'help.more_information'|trans|raw }}</p>
				</div>
			</div>
		</div>

	</div>

</div>

{% endblock %}
